}

/* =====================================
   PARTICULES DYNAMIQUES POUR LES PROJETS
   ===================================== */

/* Particules dynamiques - double couche pour effet riche */
.project[onclick] {
  position: relative;
  overflow: visible;
}

.project[onclick]::before,
.project[onclick]::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
  z-index: 10;
}

/* Particule principale - couleur accent (violet) */
.project[onclick]::before {
  background: hsl(var(--accent));
  box-shadow: 0 0 20px hsl(var(--accent));
  animation: particleFloat 3s ease-in-out infinite;
}

/* Particule secondaire - couleur primaire */
.project[onclick]::after {
  background: hsl(var(--primary));
  box-shadow: 0 0 15px hsl(var(--primary));
  animation: particleFloat2 4s ease-in-out infinite reverse;
}

/* Animation principale des particules */
@keyframes particleFloat {
  0% {
    top: -20%;
    left: -20%;
    transform: scale(0.5);
    opacity: 0;
  }
  25% {
    top: 30%;
    left: 120%;
    transform: scale(1.2);
    opacity: 0.8;
  }
  50% {
    top: 120%;
    left: 80%;
    transform: scale(0.8);
    opacity: 0.6;
  }
  75% {
    top: 80%;
    left: -10%;
    transform: scale(1.5);
    opacity: 0.4;
  }
  100% {
    top: -20%;
    left: -20%;
    transform: scale(0.5);
    opacity: 0;
  }
}

/* Animation secondaire des particules */
@keyframes particleFloat2 {
  0% {
    top: -10%;
    left: 120%;
    transform: scale(1);
    opacity: 0;
  }
  25% {
    top: 120%;
    left: -20%;
    transform: scale(0.7);
    opacity: 0.7;
  }
  50% {
    top: -20%;
    left: 30%;
    transform: scale(1.3);
    opacity: 0.5;
  }
  75% {
    top: 60%;
    left: 110%;
    transform: scale(0.9);
    opacity: 0.3;
  }
  100% {
    top: -10%;
    left: 120%;
    transform: scale(1);
    opacity: 0;
  }
}

/* Déclenchement des particules au survol */
.project[onclick]:hover::before,
.project[onclick]:hover::after {
  opacity: 1;
}

/* Appliquer aussi au chatbot pour cohérence visuelle */
