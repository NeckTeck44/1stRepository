/* Animation de transition fluide pour les sections */
.hero,
.section,
section#vision-motivation,
section#contact {
  transition: all 1.2s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform, opacity;

  /* Effet de parallaxe fluide */
  transform-style: preserve-3d;
  backface-visibility: hidden;
}

/* Configuration du body pour un scroll de roulement */
body {
  scroll-snap-type: none;
  overflow-y: scroll;
  scroll-snap-stop: normal;

  /* Effet de motion blur subtil pendant le scroll */
  transition: filter 0.3s cubic-bezier(0.4, 0, 0.2, 1);

  /* Optimisation pour le scroll fluide */
  -webkit-overflow-scrolling: touch;
  /* overscroll-behavior: contain; */ /* Commenté pour ne pas bloquer le scroll natif */
}

/* Effet de roulement pour le contenu */
.content-wrapper {
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
}

/* Scrollbar personnalisée high-tech */
