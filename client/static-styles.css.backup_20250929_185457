  background: linear-gradient(180deg, hsl(var(--accent)), hsl(268, 92%, 60%));
  border-radius: 4px;
  box-shadow: 0 0 10px rgba(59, 130, 246, 0.2);
  transition: all 0.3s ease;
}

html::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, hsl(268, 92%, 80%), hsl(var(--accent)));
  box-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
  transform: scale(1.1);
}

/* Animation de scroll fluide avec effet d'inertie */
body {
  scroll-snap-type: none;
  overflow-y: scroll;
  scroll-snap-stop: normal;

  /* Effet de motion blur plus visible pendant le scroll */
  transition: filter 0.2s ease, transform 0.2s ease;
}

body.scrolling {
  filter: blur(1px) brightness(1.05);
  transform: scale(1.001);
}

/* Effet de particules de scroll high-tech */
.scroll-particle {
  position: fixed;
  width: 4px;
  height: 4px;
  background: linear-gradient(45deg, hsl(var(--accent)), hsl(268, 92%, 80%));
  border-radius: 50%;
  pointer-events: none;
  opacity: 0;
  z-index: 9999;
  box-shadow: 0 0 8px hsl(var(--accent));
}

@keyframes scrollParticle {
  0% {
    opacity: 0;
    transform: translateY(0) scale(0) rotate(0deg);
  }
  20% {
    opacity: 1;
    transform: translateY(-8px) scale(1.2) rotate(90deg);
  }
  50% {
    opacity: 1;
    transform: translateY(-25px) scale(1) rotate(180deg);
  }
  80% {
    opacity: 0.8;
    transform: translateY(-35px) scale(0.8) rotate(270deg);
  }
  100% {
    opacity: 0;
    transform: translateY(-50px) scale(0) rotate(360deg);
  }
}

